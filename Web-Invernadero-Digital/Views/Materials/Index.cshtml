        <script>
            function changeMainImage(imgElement) {
              const newSrc = imgElement.getAttribute("src");
              document.getElementById("mainImage").setAttribute("src", newSrc);
              document.getElementById("modalImageContent").setAttribute("src", newSrc);
              const thumbnails = document.querySelectorAll(".thumbnail");
              thumbnails.forEach(el => el.classList.remove("ring-4", "ring-emerald-400"));
              imgElement.classList.add("ring-4", "ring-emerald-400");
            }

            document.addEventListener("DOMContentLoaded", function () {
              const thumbnails = document.querySelectorAll(".thumbnail");
              if (thumbnails.length > 0) {
                thumbnails[0].classList.add("ring-4", "ring-emerald-400");
              }
              AOS.init();
            });
        </script>



