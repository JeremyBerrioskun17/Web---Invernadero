#include <DHT.h>

// === Pines ===
#define DHTPIN 11
#define DHTTYPE DHT11
#define FAN_PIN 2
#define RELAY_PIN 7
#define SOIL_PIN A0
#define BUTTON_PIN 4
#define LIGHTBOMB_PIN 8 
#define LIGHT_PIN 10  // corregido de "PIN_LIGHT"

// === Umbrales ===
const float TEMP_THRESHOLD = 30.0;
const int DRY_THRESHOLD = 500;
const int WET_THRESHOLD = 300;
const unsigned long MANUAL_PUMP_DURATION = 15000; // 15 segundos

// === Estados ===
bool manualPumpActive = false;
bool manualFanActive = false;
bool pumpActiveBySoil = false;
unsigned long pumpStartTime = 0;

DHT dht(DHTPIN, DHTTYPE);

// === Funciones auxiliares ===
void activarBomba() {
  digitalWrite(RELAY_PIN, HIGH);
  digitalWrite(LIGHTBOMB_PIN, HIGH);
}

void desactivarBomba() {
  digitalWrite(RELAY_PIN, LOW);
  digitalWrite(LIGHTBOMB_PIN, LOW);
}

void setup() {
  Serial.begin(9600);
  dht.begin();

  pinMode(FAN_PIN, OUTPUT);
  pinMode(RELAY_PIN, OUTPUT);
  pinMode(LIGHTBOMB_PIN, OUTPUT);
  pinMode(BUTTON_PIN, INPUT_PULLUP);

  // Inicializa en estado apagado
  digitalWrite(FAN_PIN, LOW);
  desactivarBomba();
}

void loop() {
  // === Procesar comandos desde el puerto serial ===
  if (Serial.available()) {
    String command = Serial.readStringUntil('\n');
    command.trim();

    //Condición para encender la Bomba Manual
    if (command == "BOMBA") {
      manualPumpActive = true;
      pumpStartTime = millis();
      activarBomba();
      Serial.println("COMANDO: Bomba ENCENDIDA manualmente");
    }
    //Condición para encender el Ventilador Manual
    else if (command == "VENTILADOR") {
      manualFanActive = true;
      digitalWrite(FAN_PIN, HIGH);
      Serial.println("COMANDO: Ventilador ENCENDIDO");
    }
    //Condición para apagar el Ventilador Manual
    else if (command == "VENTILADOR_OFF") {
      manualFanActive = false;
      digitalWrite(FAN_PIN, LOW);
      Serial.println("COMANDO: Ventilador APAGADO");
    }
    //Condición para encender las LEDs Manual
    else if (command == "LUCES") {
      digitalWrite(LIGHT_PIN, HIGH);
      Serial.println("COMANDO: Luces ENCENDIDAS");
    }
    //Condición para apagar las LEDs Manual
    else if (command == "LUCES_OFF") {
      digitalWrite(LIGHT_PIN, LOW);
      Serial.println("COMANDO: Luces APAGADAS");
    }
    else {
      Serial.println("COMANDO DESCONOCIDO: " + command);
    }
  }

  // === Lectura de temperatura y control del ventilador ===
  float temp = dht.readTemperature();
  if (!isnan(temp)) {
    Serial.print("Temperatura actual: ");
    Serial.print(temp);
    Serial.println(" °C");

   if (!manualFanActive) {
    if (temp >= TEMP_THRESHOLD) {
      digitalWrite(FAN_PIN, HIGH);
      Serial.println("→ Ventilador ENCENDIDO (Auto)");
    } else {
      digitalWrite(FAN_PIN, LOW);
      Serial.println("→ Ventilador APAGADO (Auto)");
    }
  }
  } else {
    Serial.println("Error leyendo temperatura");
  }

  // === Botón manual para activar bomba ===
  if (digitalRead(BUTTON_PIN) == LOW && !manualPumpActive) {
    manualPumpActive = true;
    pumpStartTime = millis();
    activarBomba();
    Serial.println("BOTÓN: Bomba ENCENDIDA (8s)");
  }

  if (manualPumpActive && millis() - pumpStartTime >= MANUAL_PUMP_DURATION) {
    desactivarBomba();
    manualPumpActive = false;
    Serial.println("Bomba manualmente APAGADA");
  }

  // === Control automático por humedad del suelo ===
  if (!manualPumpActive) {
    int soilValue = analogRead(SOIL_PIN);
    Serial.print("Valor humedad del suelo: ");
    Serial.println(soilValue);

    if (!pumpActiveBySoil && soilValue > DRY_THRESHOLD) {
      pumpActiveBySoil = true;
      activarBomba();
      Serial.println("→ Suelo seco: Bomba ENCENDIDA");
    }

    if (pumpActiveBySoil && soilValue <= WET_THRESHOLD) {
      pumpActiveBySoil = false;
      desactivarBomba();
      Serial.println("→ Suelo húmedo: Bomba APAGADA");
    }
  }

  Serial.println("-------------------------");
  delay(1000);
}

