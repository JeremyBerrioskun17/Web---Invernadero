     <!-- Scripts -->
        <script>
            const apiBaseUrl = "https://localhost:7139";

            const tempChart = new Chart(document.getElementById('tempChart'), {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Temperatura (°C)',
                        data: [],
                        borderColor: '#198754',
                        backgroundColor: 'rgba(25, 135, 84, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                }
            });

            const humChart = new Chart(document.getElementById('humChart'), {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Humedad (%)',
                        data: [],
                        borderColor: '#198754',
                        backgroundColor: 'rgba(25, 135, 84, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                }
            });

            async function fetchLatestSensorData() {
                try {
                    const response = await fetch(`${apiBaseUrl}/api/Control/lectura`);
                    const data = await response.json();
                    const timestamp = new Date().toLocaleTimeString();

                    const currTempElem = document.getElementById('currTemp');
                    if (currTempElem) currTempElem.innerText = data.temperatura.toFixed(1);

                    const currHumElem = document.getElementById('currHum');
                    if (currHumElem) currHumElem.innerText = data.humedad.toFixed(1);

                    const temperatureValueElem = document.getElementById('temperatureValue');
                    if (temperatureValueElem) temperatureValueElem.innerText = `${data.temperatura.toFixed(1)} °C`;

                    const lightStatusElem = document.getElementById('lightStatus');
                    if (lightStatusElem) lightStatusElem.innerText = data.luz > 200 ? "Adecuada" : "Baja";

                    pushData(tempChart, timestamp, data.temperatura);
                    pushData(humChart, timestamp, data.humedad);

                    addToLog('Temperatura', `${data.temperatura} °C`, data.temperatura > 35 ? 'Alta' : 'Normal');
                    addToLog('Humedad', `${data.humedad} %`, data.humedad < 30 ? 'Baja' : 'Óptima');
                    addToLog('Luz', `${data.luz} lx`, data.luz < 200 ? 'Baja' : 'Adecuada');

                } catch (err) {
                    console.error("❌ Error al obtener datos:", err);
                }
            }

            function pushData(chart, label, value) {
                chart.data.labels.push(label);
                chart.data.datasets[0].data.push(value);
                if (chart.data.labels.length > 20) {
                    chart.data.labels.shift();
                    chart.data.datasets[0].data.shift();
                }
                chart.update();
            }

            function addToLog(sensor, valor, estado) {
                const tbody = document.getElementById('logTableBody');
                if (!tbody) return;

                let icon = "";
                let bgColor = "";
                let textColor = "";
                let estadoLabel = "";

                switch (sensor.toLowerCase()) {
                    case 'temperatura': icon = "🌡️"; break;
                    case 'humedad': icon = "💧"; break;
                    case 'luz': icon = "💡"; break;
                    default: icon = "📟";
                }

                if (['normal', 'óptima', 'adecuada'].includes(estado.toLowerCase())) {
                    bgColor = "bg-green-100";
                    textColor = "text-green-700";
                    estadoLabel = `<span class="inline-block px-3 py-1 text-xs font-semibold rounded-full ${bgColor} ${textColor} animate-pulse shadow-sm">
                                        <i class="fas fa-check-circle mr-1"></i> ${estado}
                                    </span>`;
                } else {
                    bgColor = "bg-red-100";
                    textColor = "text-red-700";
                    estadoLabel = `<span class="inline-block px-3 py-1 text-xs font-semibold rounded-full ${bgColor} ${textColor} animate-pulse shadow-sm">
                                        <i class="fas fa-exclamation-triangle mr-1"></i> ${estado}
                                    </span>`;
                }

                const row = `
                    <tr class="hover:bg-gray-50 transition-colors duration-300">
                        <td class="p-4 text-gray-700">${new Date().toLocaleString()}</td>
                        <td class="p-4 text-gray-700">${icon} ${sensor}</td>
                        <td class="p-4 text-gray-700">${valor}</td>
                        <td class="p-4">${estadoLabel}</td>
                    </tr>
                `;
                tbody.insertAdjacentHTML('afterbegin', row);
            }

            async function sendCommand(commandPath) {
                try {
                    const response = await fetch(`${apiBaseUrl}/api/Control/${commandPath}`, {
                        method: "POST"
                    });
                    const text = await response.text();
                    const statusElem = document.getElementById('status');
                    if (statusElem) statusElem.innerText = `Respuesta: ${text}`;
                } catch (error) {
                    console.error('Error:', error);
                    const statusElem = document.getElementById('status');
                    if (statusElem) statusElem.innerText = 'Error al enviar el comando.';
                }
            }

            function closeModal(id) {
                const modal = document.getElementById(id);
                if(modal) modal.classList.add('hidden');
            }

            document.addEventListener('DOMContentLoaded', () => {
                fetchLatestSensorData();
                setInterval(fetchLatestSensorData, 1000);

                // Código para actualizar valores dinámicos en modales
                const modalMotor = document.getElementById('modalMotor');
                if(modalMotor) {
                    modalMotor.addEventListener('show.bs.modal', function () {
                        const motorValElem = document.getElementById('motorEfficiency');
                        const modalMotorValue = document.getElementById('modalMotorValue');
                        if (motorValElem && modalMotorValue) {
                            modalMotorValue.textContent = motorValElem.textContent;
                        }
                    });
                }

                const modalTemp = document.getElementById('modalTemp');
                if(modalTemp) {
                    modalTemp.addEventListener('show.bs.modal', function () {
                        const tempVal = document.getElementById('temperatureValue');
                        const modalTempValue = document.getElementById('modalTempValue');
                        if(tempVal && modalTempValue) {
                            modalTempValue.textContent = tempVal.textContent;
                        }
                    });
                }

                const modalLuz = document.getElementById('modalLuz');
                if(modalLuz) {
                    modalLuz.addEventListener('show.bs.modal', function () {
                        const luzVal = document.getElementById('lightStatus');
                        const modalLuzValue = document.getElementById('modalLuzValue');
                        if(luzVal && modalLuzValue) {
                            modalLuzValue.textContent = luzVal.textContent;
                        }
                    });
                }
            });
        </script>

