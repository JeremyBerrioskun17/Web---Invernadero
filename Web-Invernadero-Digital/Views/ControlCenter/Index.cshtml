    <style>
        .scroll-table-container {
            max-height: 300px;
            overflow-y: auto;
        }

        /* Aplicar animaciones */
        .animate-pulse-slow {
            animation: pulse-slow 3s infinite;
        }

        .animate-spin-slow {
            animation: spin-slow 10s linear infinite;
        }

        .animate-spin-slow-reverse {
            animation: spin-slow-reverse 10s linear infinite;
        }

        .animate-fade-in-up {
            animation: fade-in-up 0.8s ease forwards;
        }

        /* Borde lateral con patrón mejorado */
        .card-plant-border {
            position: relative;
            background: white;
            border-radius: 1.5rem;
            box-shadow: 0 8px 20px rgb(0 0 0 / 0.1);
            padding: 1.5rem 2rem 1.5rem 4rem; /* más espacio para borde lateral */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
        }

            .card-plant-border:hover {
                transform: scale(1.07);
                box-shadow: 0 12px 30px rgb(0 128 0 / 0.3);
            }

            /* Borde lateral con SVG repetido, con hojas más grandes y más verde */
            .card-plant-border::before {
                content: "";
                position: absolute;
                top: 1.5rem;
                bottom: 1.5rem;
                left: 1rem;
                width: 10px;
                border-radius: 8px;
                background-image: url('data:image/svg+xml;utf8,<svg fill="%23005000" height="48" viewBox="0 0 24 24" width="48" xmlns="http://www.w3.org/2000/svg"><path d="M12 2C10 5 7 9 5 14 7 11 10 8 13 7c-2 3-2 7-1 10 2-5 4-9 7-12-3 2-6 4-7 7"/></svg>');
                background-repeat: repeat-y;
                background-position: center;
                background-size: 24px 48px;
                filter: drop-shadow(0 0 1px #004400);
                animation: plantBorderMove 6s linear infinite;
            }

       

        /* Iconos tamaño */
        .icon-large {
            font-size: 4rem;
        }

        /* Botones con efecto */
        button {
            cursor: pointer;
        }

        /* Añadir transición a los textos para suavizar la interacción */
        .card-plant-border h5,
        .card-plant-border h3,
        .card-plant-border p {
            transition: color 0.3s ease;
        }

        .card-plant-border:hover h5,
        .card-plant-border:hover h3,
        .card-plant-border:hover p {
            color: #064e03; /* verde oscuro más marcado */
        }

    </style>

